@page "/ManageSchedule"
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager NavigationManager;
@using Syncfusion.Blazor.Calendars
<div class="col-lg-12 control-section">
    <div>
        <h2 class="font-weight-bold">Your schedule</h2>
        <p>Manage your scheule for the next 2 monts</p>
        <hr/>
    </div>
    <div id="wrapper">
        <SfDateRangePicker Placeholder="Choose a Range" Min="@StarDate" Max="@EndDate">
            <DateRangePickerEvents ValueChange="@onChange"></DateRangePickerEvents>
        </SfDateRangePicker>
    </div>
    <div>
        @StarDate.ToShortDateString() to @EndDate.ToShortDateString()
    </div>
</div>
<style>
    #wrapper {
        max-width: 300px;
        margin: 0px auto;
        padding-top: 20px;
    }
</style>

@code {
    public DateTime StarDate { get; set; } = DateTime.Now;
    public DateTime EndDate { get; set; } = DateTime.Now.AddMonths(2);

    private void onChange(RangeEventArgs args)
    {
        StarDate = args.StartDate;
        EndDate = args.EndDate;
        StateHasChanged();
    }

}