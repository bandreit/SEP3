@using Syncfusion.Blazor.Buttons

<style>
    .rc-container {
        display:  grid;
        grid-template-columns: 3rem 4fr 1fr;
        column-gap: 1rem;
        background-color: #FFF;
        border-radius: 0.5rem;
        align-items: center;
        padding: 1rem;
    }
    
    .rc-container .avatar {
        border-radius: 50%;
        width:  3rem;
        height: 3rem;
    }
    
    .rc-container .text-container > p {
        margin: 0rem;
    }
</style>

<div class="rc-container">
    <img src="@PictureUrl" class="avatar"/>
    
    <div class="text-container">
        <b>@Title</b>
        <p>@Description</p>
    </div>

    <SfButton IsPrimary="true" @onclick="OnClick">Reserve</SfButton>
</div>

@code {
    [Parameter]
    public String PictureUrl { get; set; }
    
    [Parameter]
    public String Title { get; set; }
    
    [Parameter]
    public String Description { get; set; }
    
    [Parameter]
    public Action OnClick { get; set; }
}